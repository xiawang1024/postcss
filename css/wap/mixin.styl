border-1px($color)
  position :relative
  &::after
  	display:block
  	position:absolute
  	left:0
  	bottom:0
  	width:100%
  	border-top:1px solid $color
  	content:' '

border-all-1px( $color)
    border: 1px solid transparent
    border-image: svg(onepxborder param(--color $color)) 2 2 stretch

border-top-1px( $color)
    border-top: 1px solid transparent
    border-image: svg(onepxborder param(--color $color)) 2 2 stretch

border-bottom-1px( $color)
    border-bottom: 1px solid transparent
    border-image: svg(onepxborder param(--color $color)) 2 2 stretch


no-wrap()
	text-overflow: ellipsis
	overflow: hidden
	white-space: nowrap
no-wrap-n($n)
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: $n;
    overflow: hidden;

    
