@import './wap/index.styl'
$bgColor = #e94048
$colorActive = #f6f173
$titleColor = #da222b
$bdColor = #f5f5f5
.m-line
    width: 100%
    height: 10px
    background: #dd4149  

html,body
    width: 750px
.g-hd
    width: 100%
    height: 100px
    background: url('../img/logo-wap.png') center center no-repeat
    background-size auto 70px
    
.g-bd
    padding 0 20px 
    box-sizing: border-box
    .m-tab-wrap.index
        .img
            font-size: 0
            padding 40px 0
    .m-tab
        width: 100%
        height:140px
        display: flex
        justify-content: space-around
        align-items: center
        padding 0 50px
        box-sizing: border-box
        .item
            width: 166px
            height: 65px
            line-height: 65px
            text-align: center
            background: $bgColor
            border-radius 8px
            font-size: 24px
            color #ffffff
            &.active
                color $colorActive
    .m-bd
        width: 100%
        .title
            width: 100%
            height: 124px
            line-height: 124px
            text-align: center
            font-size:34px 
            color $titleColor
        .bd-wrap
            width: 100%                        
            box-sizing: border-box
            .img-wrap
                width: 300px
                float left
                margin-top: 15px
                margin-right: 20px                
            .text-wrap
                line-height: 1.7
                font-size: 23px
                text-indent: 2em
        &.m-bd-1
            margin-bottom: 30px
            .bd-wrap
                padding 20px 
                border-top-1px(#ddd)
                border-bottom-1px(#ddd)
                background: $bdColor
        &.m-bd-2
            .bd-wrap
                .item
                    display flex
                    align-items: center
                    margin-bottom: 30px
                    .m-order
                        flex 0 0 60px
                        width: 60px
                        height: 69px
                        line-height:69px 
                        text-align: center
                        font-size: 32px
                        color #ffffff
                        background: url('../icon/icon-rule.png') center center no-repeat
                        background-size cover
                    .m-list
                        width: 622px
                        flex 0 0 622px
                        padding-left: 28px                        
                        line-height: 1.625
                        font-size: 23px
                        box-sizing: border-box
                        .list
                            width: 100%
                            overflow hidden
                            text-overflow: ellipsis
                            // white-space nowrap
                            box-sizing: border-box
                            &:first-child
                                color #c7000a
                            .u-block
                                vertical-align: middle
                                display inline-block
                                width: 4px
                                height: 4px
                                background:#c7000a 
                            .u-text
                                vertical-align: middle
            &.m-bd-3
                .bd-wrap
                    .item
                        &:nth-child(1)
                            .m-order
                                background: url('../icon/icon-start-1.png') center center no-repeat
                                background-size: contain
                        &:nth-child(2)
                            .m-order
                                background: url('../icon/icon-start-2.png') center center no-repeat
                                background-size: contain
                        &:nth-child(3)
                            .m-order
                                background: url('../icon/icon-start-3.png') center center no-repeat
                                background-size: contain
        &.m-bd-4
            margin-bottom: 30px
            .bd-wrap
                width: 100%
                .red
                    color $titleColor
                .m-line 
                    margin 30px 0
                    background: #eee
                .m-bdc
                    border-top-1px(#ddd)
                    border-bottom-1px(#ddd)
                    background: $bdColor
                    font-size: 23px
                    padding 20px
                    box-sizing: border-box
                    .title-3
                        margin-bottom: 20px
                    .u-list
                        width: 100%
                        .list
                            margin-bottom: 20px
                            .title-4,.text
                                line-height: 1.8
        &.m-bd-5
            .m-list
                width: 100%
                .list
                    width: 340px
                    height: 399px
                    float: left
                    margin-left: 29px
                    margin-bottom: 30px
                    &:nth-child(2n+1)
                        margin-left: 0
                    .img-wrap
                        width: 340px
                        height: 191px
                        font-size: 0
                        margin-bottom:16px
                        .img
                            width 340px
                            height: 191px
                    .text-wrap
                        width: 100%
                        .title
                            width: 100%
                            height: 30px
                            line-height: 30px
                            margin-bottom: 10px
                            font-size: 26px
                            text-align: left 
                            color $titleColor
                            white-space nowrap
                            overflow hidden
                            text-overflow: ellipsis
                        .date,.address
                            font-size: 23px
                            line-height: 1.6
                            white-space nowrap
                            overflow hidden
                            text-overflow: ellipsis
                        .desc
                            font-size: 23px
                            line-height: 1.6
                            overflow : hidden;
                            text-overflow: ellipsis;
                            display: -webkit-box;
                            -webkit-line-clamp: 2;
                            -webkit-box-orient: vertical;
    .products-list
        width: 100%
        margin-top: 30px
        box-sizing: border-box
        .list-wrap
            width: 100%
            box-sizing: border-box
            .list
                width: 216px
                height: 300px
                float left
                margin-left: 30.5px
                margin-bottom: 40px
                &:nth-child(3n+1)
                    margin-left: 0
                .img-wrap
                    width: 216px
                    height: 216px
                    font-size: 0
                    .img
                        width: 216px
                        height: 216px
                .text-wrap
                    width: 216px
                    .title,.name
                        width: 100%
                        overflow hidden
                        text-overflow: ellipsis
                        white-space nowrap
                        line-height: 1.6
                        font-size: 26px
                        color #333
                    .name
                        color #666
        .u-see-more
            width: 100%
            height:40px 
            line-height: 40px
            text-align: center
            font-size: 20px
            color #666
            background: #eee
.g-ft
    width: 100%
    margin-top: 60px
    text-align: center
    .ft-download
        width: 100%
        padding-bottom: 40px
        border-bottom-1px(#ccc)
        .link
            display inline-block
            // width:360px 
            height: 80px
            line-height: 80px
            border-radius: 40px
            padding 0 60px 0 120px
            color #fff
            background:url('../icon/icon-phone.png') left 60px center no-repeat #0081dc
            background-size: auto 60px
        .desc
            margin-top: 16px
            font-size: 24px
    .ft-copy
        padding 30px 0
        font-size: 28px
        line-height: 1.6





    
