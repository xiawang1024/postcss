@import './pc/index.styl'
$width = 1000px
$titleColor = #dc3038
$bgColor = #f5f5f5
.m-line
    width: 100%
    height: 10px
    background: #dd4149
body
    min-width $width		
    background-color #ffffff
.g-top
    width: 100%
    height: 46px
    background: #ffffff
    .logo-wrap
        display: block
        width: $width
        margin 0 auto
        height: 46px
        background: url('../img/logo.png') left center no-repeat
.g-hd	
    width: 100%
    height: 618px
    min-width: $width	
    background: url('../img/banner.png') center center no-repeat
.g-tab
    width: 100%
    height: 50px
    line-height: 50px
    background: #dd4149
    .m-tab
        display block
        width: 250px
        margin 0 auto
        font-size: 16px
        color #ffffff
        .item
            float right
            &:first-child
                float left
            &.active
                color #dccf00
.g-bd
    width: $width
    margin 0 auto
    padding 0 20px
    box-sizing: border-box
    .m-bd
        width: 100%
        .title
            height: 120px
            line-height: 120px
            text-align: center
            font-size: 23px
            color $titleColor
        .bd-wrap
            width 100%
            .img-wrap
                float left
                width: 382px
                height: 240px
                font-size: 0
                .img
                    width: 382px
                    height: 240px
            .text-wrap
                float right
                width: 512px
                line-height: 1.8
                text-indent: 2em
                font-size: 16px
                color #333
                p
                    padding 4px 0
        &.m-bd-1
            margin-bottom: 55px
            .bd-wrap
                padding 50px 20px
                background: $bgColor
                border-top 1px solid #ddd
                border-bottom: 1px solid #ddd
                box-sizing: border-box
        &.m-bd-2,&.m-bd-3
            width: 480px
        &.m-bd-2
            float left
            .bd-wrap
                .item
                    display flex
                    align-items: center
                    margin-bottom: 30px
                    .m-order
                        float left
                        flex 0 0 60px
                        width: 60px
                        height: 69px
                        line-height:69px 
                        text-align: center
                        font-size: 28px
                        color #ffffff
                        background: url('../icon/icon-rule.png') center center no-repeat
                        background-size cover
                    .m-list
                        float right
                        width: 368px
                        flex 0 0 368px
                        padding-left: 28px                        
                        line-height: 1.625
                        font-size: 16px
                        box-sizing: border-box
                        .list
                            width: 100%
                            overflow hidden
                            text-overflow: ellipsis
                            // white-space nowrap
                            box-sizing: border-box
                            &:first-child
                                color #c7000a
                            .u-block
                                vertical-align: middle
                                display inline-block
                                width: 4px
                                height: 4px
                                background:#c7000a 
                            .u-text
                                vertical-align: middle
            &.m-bd-3
                float right
                .bd-wrap
                    .item
                        &:first-child
                            .m-order
                                flex 0 0 45px
                                width: 45px
                                background: url('../icon/icon-start-1.png') center center no-repeat
                                background-size: contain
                        &:first-child + .item
                            .m-order
                                flex 0 0 45px
                                width: 45px
                                background: url('../icon/icon-start-2.png') center center no-repeat
                                background-size: contain
                        &:first-child + .item + .item
                            .m-order
                                flex 0 0 45px
                                width: 45px
                                background: url('../icon/icon-start-3.png') center center no-repeat
                                background-size: contain
        &.m-bd-4
            margin-bottom: 30px
            .bd-wrap
                width: 100%
                .red
                    color $titleColor
                .m-line 
                    margin 30px 0
                    background: #eee
                .m-bdc
                    float right
                    width: 468px
                    height: 388px
                    border 1px solid #dddddd
                    background: $bdColor
                    font-size: 16px
                    padding 20px
                    box-sizing: border-box
                    &:first-child
                        float left
                    .title-3
                        margin-bottom: 20px
                    .u-list
                        width: 100%
                        .list
                            margin-bottom: 12px
                            .title-4,.text
                                line-height: 1.8
                                color #333
        &.m-bd-5
            .m-list
                width: 100%
                .list
                    width: 306px
                    height: 399px
                    float: left
                    margin-left: 20px
                    margin-bottom: 30px
                    &:first-child
                        margin-left: 0
                    .img-wrap
                        width: 306px
                        height: 173px
                        font-size: 0
                        margin-bottom:16px
                        .img
                            width 306px
                            height: 173px
                    .text-wrap
                        width: 100%
                        .title
                            width: 100%
                            height: 30px
                            line-height: 30px
                            margin-bottom: 10px
                            font-size: 16px
                            text-align: left 
                            color $titleColor
                            white-space nowrap
                            overflow hidden
                            text-overflow: ellipsis
                        .date,.address
                            font-size: 14px
                            line-height: 1.6
                            white-space nowrap
                            overflow hidden
                            text-overflow: ellipsis
                        .desc
                            font-size: 14px
                            line-height: 1.6
                            overflow : hidden;
                            text-overflow: ellipsis;
                            display: -webkit-box;
                            -webkit-line-clamp: 2;
                            -webkit-box-orient: vertical;
.g-ft
	width: 100%	
	height: 115px
	text-align: center	
	font-size: 13px
	color #666666
	overflow hidden
	background: #f5f5f5
	.para
		line-height: 2
		&:first-child
			margin-top: 30px




    
