@import './wap/index.styl'
$color = #c7000a


html,body
    width: 750px
.g-hd
    width: 100%
    height: 100px
    background: url('../img/logo-wap.png') center center no-repeat
    background-size auto 70px
    
.g-bd
    padding 0 20px 
    box-sizing: border-box
    .red
        color $color
    .m-info
        width: 100%
        margin-top: 40px
        box-sizing: border-box
        .u-subject
            padding-bottom: 16px
            border-bottom 2px solid #dd4149
            font-size: 28px
            color $color
        .info-wrap
            width: 100%
            margin-top: 20px
            box-sizing: border-box
            display flex
            .img-wrap
                width: 240px 
                height: 240px
                flex 0 0 240px
                font-size: 0
                .img
                    width: 240px
                    height: 240px
            .text-wrap
                flex 0 0 426px
                width: 426px
                margin-left: 40px
                .title
                    margin-bottom: 20px
                    font-size: 28px
                .name,.time,.from                    
                    margin-bottom: 18px
                    font-size: 23px
                .btn-group
                    margin-top: 40px
                    font-size: 18px
                    .btn
                        // width: 82px
                        height: 46px
                        line-height: 46px
                        text-align: center
                        margin-right: 40px
                        outline: none 
                        border none
                        color #fff
                        padding 0 10px 0 40px
                        border-radius: 8px
                        &:nth-child(1)
                            background: url('../icon/icon-play.png') left 10px center no-repeat $color
                            background-size: auto 23px
                            &.active
                                background: url('../icon/icon-pause.png') left 10px center no-repeat $color
                                background-size: auto 23px
                        &:nth-child(2)
                            background: url('../icon/icon-msg.png') left 10px center no-repeat $color
                            background-size: auto 23px
    .m-comment
        width: 100%
        margin-top: 40px
        box-sizing: border-box
        .u-subject
            padding-bottom: 16px
            border-bottom 2px solid #dd4149
            font-size: 28px
            color $color
        .send-comment
            width: 100%
            margin-top: 20px
            box-sizing: border-box
            display flex
            .avatar-wrap
                flex 0 0 70px
                width: 70px
                height: 70px
                font-size: 0
                .img
                    width: 70px
                    height: 70px
            .comment-wrap     
                width: 600px           
                flex 0 0 600px
                margin-left: 30px
                box-sizing: border-box
                text-align: right
                .comment
                    display block
                    width: 100%
                    height: 100px
                    outline: none 
                    border 1px solid #e3e3e3
                    border-radius 8px
                    text-align: left
                .submit
                    margin-top: 18px
                    height: 48px
                    line-height: 48px
                    outline: none 
                    border none
                    border-radius 6px
                    font-size: 24px
                    color #fff
                    padding 0 10px
                    background: $color
                    &:active
                        background: #a5050d
        .comment-list
            width: 100%
            margin-top: 30px
            .u-subject
                font-size: 24px
                color #000
                border-bottom: 1px solid #ddd
            .list-wrap
                width: 100%
                box-sizing: border-box
                .list
                    display flex
                    width: 100%
                    padding 20px 0
                    border-bottom 1px dashed #ddd
                    box-sizing: border-box
                    .avatar-wrap
                        width: 70px
                        height: 70px
                        flex 0 0 70px
                        font-size: 0
                        .img
                            width: 70px
                            height: 70px
                    .text-wrap
                        width: 608px
                        margin-left: 30px
                        .cont-wrap
                            line-height: 1.6
                            font-size: 23px
                            .name
                                color $color
                            .cont
                                display inline
                        .other-wrap
                            width: 100%
                            margin-top: 28px
                            font-size: 21px
                            .time
                                float left
                                color #999
                            .zan
                                display inline-block
                                height: 26px
                                line-height: 26px
                                float right
                                padding-left: 32px
                                background: url('../icon/icon-zan.png') left center no-repeat
                                background-size: 24px auto
                                font-size: 24px
            .u-see-more
                margin-top: 30px
                width: 100%
                height:40px 
                line-height: 40px
                text-align: center
                font-size: 20px
                color #666
                background: #eee                
.g-ft
    width: 100%
    margin-top: 60px
    text-align: center
    .ft-download
        width: 100%
        padding-bottom: 40px
        border-bottom-1px(#ccc)
        .link
            display inline-block            
            height: 80px
            line-height: 80px
            border-radius: 40px
            padding 0 60px 0 120px
            color #fff
            background:url('../icon/icon-phone.png') left 60px center no-repeat #0081dc
            background-size: auto 60px
        .desc
            margin-top: 16px
            font-size: 24px
    .ft-copy
        padding 30px 0
        font-size: 28px
        line-height: 1.6





    
