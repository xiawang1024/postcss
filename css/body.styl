@import './pc/index.styl'
$width = 1000px
$titleColor = #dc3038
$bgColor = #f5f5f5
$color = #c7000a
.m-line
    width: 100%
    height: 10px
    background: #dd4149
body
    min-width $width		
    background-color #f5f5f5
.g-top
    width: 100%
    height: 46px
    background: #ffffff
    .logo-wrap
        display: block
        width: $width
        margin 0 auto
        height: 46px
        background: url('../img/logo.png') left center no-repeat
.g-hd	
    width: 100%
    height: 618px
    min-width: $width	
    background: url('../img/banner.png') center center no-repeat
.g-bd
    width: $width
    margin 0 auto
    padding 0 20px 30px 20px
    background: #ffffff
    box-sizing: border-box
    .red
        color $color
    .m-info
        width: 100%
        padding-top: 40px
        box-sizing: border-box
        .u-subject
            padding-bottom: 16px
            border-bottom 2px solid #dd4149
            font-size: 24px
            color $color
        .info-wrap
            width: 100%
            margin-top: 20px
            box-sizing: border-box
            display flex
            .img-wrap
                float left
                width: 220px 
                height: 220px
                flex 0 0 220px
                font-size: 0
                .img
                    width: 220px
                    height: 220px
            .text-wrap
                float right
                flex 0 0 426px
                width: 426px
                margin-left: 40px
                .title
                    margin-bottom: 20px
                    font-size: 20px
                .name,.time,.from                    
                    margin-bottom: 18px
                    font-size: 15px
                .btn-group
                    margin-top: 50px
                    font-size: 16px
                    .btn
                        // width: 82px
                        height: 46px
                        line-height: 46px
                        text-align: center
                        margin-right: 40px
                        outline: none 
                        border none
                        font-size: 15px
                        color #fff
                        padding 0 10px 0 40px
                        border-radius: 8px
                        &:nth-child(1)
                            background: url('../icon/icon-play.png') left 10px center no-repeat $color
                            background-size: auto 20px
                            &.active
                                background: url('../icon/icon-pause.png') left 10px center no-repeat $color
                                background-size: auto 20px
                        &:nth-child(2)
                            background: url('../icon/icon-msg.png') left 10px center no-repeat $color
                            background-size: auto 20px
    .m-comment
        width: 100%
        margin-top: 40px
        box-sizing: border-box
        .u-subject
            padding-bottom: 16px
            border-bottom 2px solid #dd4149
            font-size: 24px
            color $color
        .send-comment
            width: 100%
            margin-top: 20px
            box-sizing: border-box
            display flex
            justify-content: space-between
            .avatar-wrap
                float left
                flex 0 0 70px
                width: 70px
                height: 70px
                font-size: 0
                .img
                    width: 70px
                    height: 70px
            .comment-wrap     
                float right
                width: 830px           
                flex 0 0 830px
                margin-left: 30px
                box-sizing: border-box
                text-align: right
                .comment
                    display block
                    width: 100%
                    height: 100px
                    outline: none 
                    border 1px solid #e3e3e3
                    border-radius 8px
                    text-align: left
                    padding 8px
                    box-sizing: border-box
                .submit
                    margin-top: 18px
                    height: 40px
                    line-height: 40px
                    outline: none 
                    border none
                    border-radius 6px
                    font-size: 15px
                    padding 0 12px
                    color #fff
                    background: $color
                    &:active
                        background: #a5050d
        .comment-list
            width: 100%
            margin-top: 30px
            .u-subject
                font-size: 16px
                color #000
                border-bottom: 1px solid #ddd
            .list-wrap
                width: 100%
                box-sizing: border-box
                .list                    
                    display flex
                    width: 100%
                    padding 20px 0
                    border-bottom 1px dashed #ddd
                    box-sizing: border-box
                    .avatar-wrap
                        float left
                        width: 70px
                        height: 70px
                        flex 0 0 70px
                        font-size: 0
                        .img
                            width: 70px
                            height: 70px
                    .text-wrap
                        float right                        
                        width: 830px                        
                        margin-left: 30px
                        .cont-wrap
                            line-height: 1.8
                            font-size: 15px
                            .name
                                color $color
                            .cont
                                display inline
                        .other-wrap                            
                            width: 100%
                            height: 20px
                            line-height: 20px
                            margin-top: 14px
                            font-size: 15px
                            .time
                                float left                               
                                color #999
                            .zan
                                display inline-block
                                height: 26px
                                line-height: 26px
                                float right
                                padding-left: 26px
                                background: url('../icon/icon-zan.png') left center no-repeat
                                background-size: 18px auto
                                font-size: 15px
                                cursor pointer
            .u-see-more
                width: 100%
                margin: 40px 0
                height:40px 
                line-height: 40px
                text-align: center
                font-size: 16px
                color #666
                background: #eee
                cursor pointer                

.g-ft
	width: 100%	
	height: 115px
	text-align: center	
	font-size: 13px
	color #666666
	overflow hidden
	background: #f5f5f5
	.para
		line-height: 2
		&:first-child
			margin-top: 30px




    
